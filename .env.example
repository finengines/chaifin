# n8n Webhook Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/macAssistant

# Default AI Provider and Model
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# UI Configuration
APP_TITLE=Personal Assistant
APP_DESCRIPTION=Your personal AI assistant powered by n8n

# Authentication Configuration (set to true to enable)
ENABLE_AUTH=false
AUTH_USERNAME=admin
AUTH_PASSWORD=password

# Chainlit Authentication Secret (required)
# Generate with: chainlit create-secret
CHAINLIT_AUTH_SECRET="your_generated_secret_here"

# Feedback Configuration
ENABLE_FEEDBACK=true

# Request Configuration
REQUEST_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO 